{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/_next/*",
      "/api/*",
      "/favicon.ico",
      "/*.svg",
      "/*.png",
      "/*.jpg",
      "/*.gif"
    ]
  },
  "routes": [
    {
      "route": "/api/*",
      "allowedRoles": ["anonymous"]
    }
  ],
  "platform": {
    "apiRuntime": "node:20"
  },
  "networking": {
    "allowedIpRanges": []
  },
  "responseOverrides": {
    "500": {
      "rewrite": "/500.html",
      "statusCode": 500
    }
  }
}
